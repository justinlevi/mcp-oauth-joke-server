# Example environment configuration for joke MCP server

# HTTP Server Configuration (optional)
HTTP_HOST=127.0.0.1
HTTP_PORT=8000

# Logging Configuration (optional)
LOG_LEVEL=INFO

# OAuth 2.1 Authorization Configuration
# Required when ALLOW_AUTH_BYPASS=false

# Keycloak server settings
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=mcp
KEYCLOAK_CLIENT_ID=mcp-joke-server
# Get this from Keycloak admin console: Clients > mcp-joke-server > Credentials
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Resource server URL (this server's public URL)
RESOURCE_SERVER_URL=http://localhost:8000

# Development settings
# Set to true to bypass OAuth checks (development only)
# WARNING: Never use in production!
ALLOW_AUTH_BYPASS=false